<div class="container">
  <h3>Listing servers <%= link_to '<i class="fa fa-plus-circle"></i>'.html_safe, new_server_path %></h3>

  <table class='table table-striped table-hover'>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Status</th>
      <th>Last Activity</th>
      <th>Is executing command now</th>
      <th>Self-Destruction enabled?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @servers.each do |server| %>
        <tr>
          <td><%= link_to server.name, server %></td>
          <td><%= server.description %></td>
          <td><%= server.address %></td>
          <td><%= server._status %></td>
          <td><%= server.last_activity_date %></td>
          <td align="center">
            <% if server.executing_command_now %>
                <i class="fa fa-check"></i>
            <% else %>
                <i class="fa fa-times"></i>
            <% end %>
          </td>
          <td align="center">
            <% if server.self_destruction %>
                <i class="fa fa-check"></i>
            <% else %>
                <i class="fa fa-times"></i>
            <% end %>
          </td>
          <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_server_path(server) %></td>
          <td>
            <%= link_to '<i class="fa fa-trash delete-server"></i>'.html_safe, server, method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
    <% end %>
  </table>
  <p><%= link_to 'Create servers multiple', servers_create_multiple_path %></p>
</div>
