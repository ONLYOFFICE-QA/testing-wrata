<%= yield :head %>
<% if signed_in? %>
    <div class="navbar navbar-inverse">
      <div class="navbar-header">
        <a class="navbar-brand" href="/"><i class="fa fa-home"></i>TestRunner</a>
      </div>
      <div class="navbar-collapse">
        <ul class="nav navbar-nav navbar-right" style="line-height: 36px;">
          <% if @controller == :runner %>
              <li>
                <div id="delay-runs" class="nav-div">DelayRuns</div>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle transition-color" data-toggle="dropdown"><i class="fa fa-flag icon-white"></i>Test
                  Lists <b class="caret"></b></a>
                <ul id="test_list_menu" class="dropdown-menu">
                  <% client_test_lists.each do |test_list| %>
                      <li style="position: relative">
                        <a href="#"><%= test_list.name %></a>
                        <i class="fa fa-trash delete-test-list" style="padding: 0;" delete-data="<%= test_list_path(test_list) %>"></i>
                      </li>
                  <% end %>
                  <li class="divider"></li>
                  <li><a>Create new</a></li>
                </ul>
              </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-user icon-white"></i>
              <%= current_client.login %><b class="caret"></b></a>
            <ul class="user-dropdown dropdown-menu">
              <li><%= link_to 'Servers', servers_url %></li>
              <li><%= link_to 'Run history', client_history_path(current_client) %></li>
              <li><%= link_to 'Edit', edit_client_path(current_client) %></li>
              <li><%= link_to 'API Keys', clients_api_keys_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
<% else %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-header">
        <a class="navbar-brand" href="/"><i class="fa fa-home"></i>TestRunner</a>
      </div>
    </div>
<% end %>
