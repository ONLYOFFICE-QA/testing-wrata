<%= yield :head %>
<% if signed_in? %>
    <div id="topnavbar" class="navbar navbar-inverse">
      <a class="navbar-brand" href="/"><i class="glyphicon glyphicon-home"></i>TestRunner</a>
        <ul class="nav navbar-nav navbar-right" style="line-height: 36px;">
          <% if @controller == :runner %>
              <li>
                <div id="delay-runs" class="nav-div">DelayRuns</div>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle transition-color" data-toggle="dropdown"><i class="glyphicon glyphicon-flag icon-white"></i>Test Lists <b class="caret"></b></a>
                <ul id="test_list_menu" class="dropdown-menu">
                  <% client_test_lists.each do |test_list| %>
                      <li style="position: relative">
                        <a href="#"><%= test_list.name %></a>
                        <i class="glyphicon glyphicon-trash delete-test-list" style="padding: 0;" delete-data="<%= test_list_path(test_list) %>"></i>
                      </li>
                  <% end  %>
                  <li class="divider"></li>
                  <li><a>Create new</a></li>
                </ul>
              </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="glyphicon glyphicon-user icon-white"></i>
              <%= current_client.login  %><b class="caret"></b></a>
            <ul class="user-dropdown dropdown-menu">
              <li><%= link_to 'Run history', client_history_path(current_client) %></li>
              <li><%= link_to 'Edit', edit_client_path(current_client) %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
            </ul>
          </li>
        </ul>
    </div>
<% else %>
    <div id="topnavbar" class="navbar navbar-inverse">
      <div class="collapse navbar-collapse">
        <a class="navbar-brand" href="/"><i class="glyphicon glyphicon-home"></i>TestRunner</a>
        <ul class="nav navbar-nav navbar-right navbar-form">
        </ul>
      </div>
    </div>
<% end %>
