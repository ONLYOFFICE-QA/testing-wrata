<%= yield :head %>
<% if signed_in? %>
    <div id="topnavbar" class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner" style="border-radius: 0">
        <ul class="nav">
          <li><a href="/"><i class="glyphicon glyphicon-home icon-white"></i>TestRunner</a></li>
        </ul>
        <ul class="nav navbar-nav pull-right" style="line-height: 36px;">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle transition-color" data-toggle="dropdown"><i class="icon-flag icon-white"></i>Test Lists <b class="caret"></b></a>
            <ul id="test_list_menu" class="dropdown-menu">
              <% get_client_test_lists.each do |test_list| %>
                  <li style="position: relative">
                    <a href="#"><%= test_list.name %></a>
                    <i class="icon-trash delete-test-list" style="padding: 0;" delete-data="<%= test_list_path(test_list) %>"></i>
                  </li>
              <% end  %>
              <li class="divider"></li>
              <li><a>Create new</a></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-user icon-white"></i>
              <%= current_client.login  %><b class="caret"></b></a>
            <ul class="user-dropdown dropdown-menu">
              <li><%= link_to 'Run history', client_history_path(current_client) %></li>
              <li><%= link_to 'Edit', edit_client_path(current_client) %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
<% else %>
    <div id="topnavbar" class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner" style="border-radius: 0">
        <ul class="nav">
          <li><a href="<%= runner_path %>"><i class="icon-home icon-white"></i>TestRunner</a></li>
        </ul>
        <ul class="nav navbar pull-right">
          <li><%= form_for(:session, url: sessions_path, :html => {:class => 'navbar-form'} ) do |f| %>
              <%= f.text_field :login, class: 'form-control', placeHolder: 'login' %>
              <%= f.password_field :password, class: 'form-control', placeHolder: 'password' %>
              <%= f.submit 'log in', class: 'btn' %>
          <% end %>
          </li>
          <li><a href="/signup" class="blue">sign up</a></li>
        </ul>
      </div>
    </div>
<% end %>
<div style="margin-top: 50px"></div>

